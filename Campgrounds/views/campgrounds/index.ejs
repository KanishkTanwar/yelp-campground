<% include ../partials/header %>
  <div class="container">
    <header class="jumbotron">
      <div class="cotainer">
        <h1>Welcome To YelpCamp!</h1>
        <p>View our hand-picked campgrounds from all over the world</p>
        <p><a class="btn btn-primary btn-large" href="/campgrounds/new">Add New Campground</a></p>
      </div>
    </header>
    <div class="row text-center" style="display:flex; flex-wrap: wrap;">
      <%campgrounds.forEach(function(camps){%>
        <div class="col-sm-6 col-md-3">
          <div class="thumbnail">
            <img src="<%=camps.image%>" alt="not founds">
            <div class="caption">
              <h4><%= camps.name %></h4>
            </div>
            <a href="/campgrounds/<%=camps._id%>" class="btn btn-primary">ShowMore</a>
          </div>
        </div>
        <%})%>
    </div>
  </div>

  <% include ../partials/footer %>
