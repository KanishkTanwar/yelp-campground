<% include ../partials/header %>
<div class="container">
    <div class="row">
        <h1 style="text-align: center">Edit Comment <%=details.text%></h1>
        <div style="width: 30%; margin: 25px auto;">
            <form action="/campgrounds/<%=id%>/comments/<%=details.id%>?_method=PUT" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" name="comment[text]" value="<%=details.text%>">
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-warning btn-block">Submit!</button>
                </div>
            </form>
        </div>
    </div>
</div>
