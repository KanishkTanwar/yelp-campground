<% include ../partials/header %>
<div class="container">
    <div class="row">
        <h1 style="text-align: center">Edit Campground <%=camps.name%></h1>
        <div style="width: 30%; margin: 25px auto;">
            <form action="/campgrounds/<%=camps.id%>?_method=PUT" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" name=blog[name] value="<%=camps.name%>">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name=blog[image] value="<%=camps.image%>">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name=blog[description] value="<%=camps.description%>">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name=blog[price] value="<%=camps.price%>">
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-warning btn-primary btn-block">Update</button>
                </div>
            </form>
            <a href="/campgrounds">Go Back</a>
        </div>
    </div>
</div>
<% include ../partials/footer %>
